<div class="row">
  <div class="col-sm-6">
    <h1>Menu</h1>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to menu_path, remote: true, class: 'btn btn-primary' do %>
      <%= icon('fas', 'random') %>
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover"
    <thead>
      <tr>
        <th style="width: 8rem">Day</th>
        <th style="width: 52px"></th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody id="menu">
      <% @meals.each_with_index do |meal, i| %>
        <%= render partial: "table_row", locals: { meal: meal, i: i } %>
      <% end %>
    </tbody>
  </table>
</div>

