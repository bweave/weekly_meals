<div class="page-header">
  <h1>Meals</h1>
  <div>
    <%= link_to new_meal_path, class: 'btn btn-primary' do %>
      <%= icon('fas', 'plus-circle') %>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th style="width: 52px"></th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @meals.each do |meal| %>
        <%= content_tag :tr, id: dom_id(meal), class: dom_class(meal) do %>
          <%= render partial: "table_row", locals: { meal: meal } %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
